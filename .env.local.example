# Petfendy Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SECURITY - JWT Configuration
# ===========================================
# Generate secure secrets with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# ===========================================
# TEST ENVIRONMENT ONLY - Admin Credentials
# ===========================================
# WARNING: These are for DEVELOPMENT/TEST only!
# In production, use a proper authentication backend
#
# To generate password hash, run in Node.js:
# const bcrypt = require('bcryptjs');
# bcrypt.hash('YourSecurePassword123!', 12).then(console.log);
#
NEXT_PUBLIC_TEST_ADMIN_EMAIL=admin@petfendy.com
NEXT_PUBLIC_TEST_ADMIN_PASSWORD_HASH=$2a$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/X4lVl3O4tT8g1L3Ge

# ===========================================
# API Configuration
# ===========================================
# Set this in production to enable real authentication
# NEXT_PUBLIC_API_URL=https://api.petfendy.com

# ===========================================
# Email Service (SendGrid)
# ===========================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@petfendy.com

# ===========================================
# Payment Gateway - İyzico
# ===========================================
# Get these from İyzico Merchant Panel: https://merchant.iyzipay.com/
# NEVER use NEXT_PUBLIC_ prefix for these keys!
IYZICO_API_KEY=your-api-key
IYZICO_SECRET_KEY=your-secret-key

# İyzico Base URL (sandbox for test, production for live)
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# İyzico Callback URLs (must be publicly accessible)
IYZICO_SUCCESS_URL=https://petfendy.com/payment/success
IYZICO_FAIL_URL=https://petfendy.com/payment/fail

# İyzico Webhook Secret (for callback verification)
IYZICO_WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# Encryption (Server-side only)
# ===========================================
# This should NOT be prefixed with NEXT_PUBLIC_
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
# ALLOWED_ORIGINS=https://petfendy.com,https://www.petfendy.com,https://admin.petfendy.com
