# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-here

# Session
SESSION_SECRET=your-session-secret-here

# File Upload
MAX_FILE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
UPLOAD_DIR=./public/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Credentials (Change these!)
ADMIN_EMAIL=admin@petfendy.com
ADMIN_PASSWORD=change-this-password

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/petfendy

# ===== PAYTR SANAL POS =====
# PayTR Merchant Panel'den alınacak bilgiler
PAYTR_MERCHANT_ID=your_merchant_id
PAYTR_MERCHANT_KEY=your_merchant_key
PAYTR_MERCHANT_SALT=your_merchant_salt

# Test modu (1: test, 0: production)
PAYTR_TEST_MODE=1

# ===== ENCRYPTION =====
# Şifreleme anahtarı (en az 32 karakter)
# openssl rand -base64 32 ile oluşturulabilir
ENCRYPTION_KEY=your-32-character-encryption-key-here
